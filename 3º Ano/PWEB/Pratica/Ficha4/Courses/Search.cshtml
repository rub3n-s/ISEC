@model FirstAppFirstClassPweb.ViewModel.PesquisaCursoViewModel
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Search</h1>
<div class="row">
    
    <div class="col-3">
        <a asp-action="Index" asp-route-disponivel="true">Todos</a>
        <t>|</t>
        <a asp-action="Activos" asp-route-disponivel="true">Activos</a>
        <t>|</t>
        <a asp-action="Inactivos" asp-route-disponivel="false">Inactivos</a>
        <t>|</t>
    </div>
    <div class="col-9">
        <form method="post" asp-action="Search" asp-controller="Courses">
            <label for="fname">Pesquisa de Curso:</label>
            <input asp-for="TextoAPesquisar">
            <input type="submit" value="Pesquisar">
        </form>

    </div>
</div>

<t>|</t>

<p></p>
<p>Existe @Model.NumResultados cursos</p>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>
                
                @Html.DisplayNameFor(model => model.ListaDeCursos.FirstOrDefault().Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListaDeCursos.FirstOrDefault().Disponivel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListaDeCursos.FirstOrDefault().categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListaDeCursos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Disponivel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.categoria.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

