@model IEnumerable<EscolaConducao.Models.Curso>

@{
    //ViewData["Title"] = "Lista de Cursos";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>
    @ViewData["Title"]
    <small>(<a asp-action="Create">Adicionar</a>)</small>
</h1>

<div class="row">
    <div class="col-2">
        <a asp-action="Index" asp-controller="Cursos" asp-route-disponivel="">Todos</a> |
        <a asp-action="Index" asp-route-disponivel="true">Activos</a> |
        <a asp-action="Index" asp-route-disponivel="false">Inactivos</a> |
    </div>
    <div class="col-10">
        <form method="post">
            <label for="fname">Pesquisa de cursos:</label>
            <input type="text" id="TextoAPesquisar" name="TextoAPesquisar" placeholder="texto a procurar" />
            <select name="CategoriaId" asp-items="ViewBag.ListaDeCategorias"></select>
            <input type="submit" value="Pesquisar" />
        </form>
    </div>
</div>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponivel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var curso in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(cursos => curso.Categoria.Nome)
                </td>
                <td>
                    @Html.DisplayFor(cursos => curso.Nome)
                </td>
                <td>
                    @Html.DisplayFor(cursos => curso.Disponivel)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@curso.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@curso.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@curso.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
