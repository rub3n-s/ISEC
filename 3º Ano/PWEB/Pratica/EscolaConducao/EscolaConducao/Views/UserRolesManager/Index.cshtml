@model IEnumerable<EscolaConducao.Models.UserRolesViewModel>

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewData["Title"] = "User Roles";
}

<h1>
    @ViewData["Title"]
</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Avatar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimeiroNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UltimoNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roles)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @if (item.Avatar?.Length > 0)
                    {
                        <img id="MyAvatar" src="data:image/*;base64,@(Convert.ToBase64String(item.Avatar))">
                    }
                    else
                    {
                        <img id="MyAvatar" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" 
                            src="/img/user_stock_photo.jpg">
                    }
                </td>
                <td>
                    @Html.DisplayFor(model => item.PrimeiroNome)
                </td>
                <td>
                    @Html.DisplayFor(model => item.UltimoNome)
                </td>
                <td>
                    @Html.DisplayFor(model => item.UserName)
                </td>
                <td>
                    @string.Join(", ", item.Roles);
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Details" asp-route-userId="@item.UserId">Manage Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
