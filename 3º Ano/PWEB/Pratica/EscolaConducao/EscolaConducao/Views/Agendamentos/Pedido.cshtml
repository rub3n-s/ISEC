@model EscolaConducao.Models.Agendamento

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h4>Agendamento - Pedido</h4>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Calcular">
                <input type="hidden" asp-for="DuracaoEmHoras" />
                <input type="hidden" asp-for="DuracaoEmMinutos" />
                <input type="hidden" asp-for="Preco" />
                <input type="hidden" asp-for="TipoDeAulaId" />
                <!--<div asp-validation-summary="ModelOnly" class="text-danger"></div>-->
                <div class="form-group">
                    <label class="control-label">Tipo de Aula</label>
                    <input type="text" class="form-control form-control-lg" value="@Model.TipoDeAula.Nome" />
                </div>
                <div class="form-group">
                    <label asp-for="DataInicio" class="control-label"></label>
                    <input asp-for="DataInicio" class="form-control" />
                    <span asp-validation-for="DataInicio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataFim" class="control-label"></label>
                    <input asp-for="DataFim" class="form-control" />
                    <span asp-validation-for="DataFim" class="text-danger"></span>
                </div>

                <div class="form-group pt-4">
                    <p class="alert alert-info">
                        Este pedido de agendamento tem um custo de  <b>@Model.Preco</b> Euros.

                    </p>
                </div>
                <div class="form-group">
                    <input type="submit" value="Criar Agendamento" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
} 
else 
{
    <p class="alert alert-warning">Só utilizadores autenticados é que podem efetuar agendamentos. Por favor, autentique-se.</p>
}

